@model IEnumerable<BugTracker23.Models.Project>
@using BugTracker23.Helpers
@{
    ViewBag.Title = "Index";
    ProjectHelper projectHelper = new ProjectHelper();
}

@if (User.IsInRole("Administrator") || User.IsInRole("Project Manager"))
{
    <h2>Projects</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table color-table dark-table text-white-50">
                            <thead>
                                <tr>
                                    <th>Project</th>
                                    <th>Created</th>
                                    <th>Number<br />of Users</th>
                                    <th>Number<br />of Tickets</th>
                                    <th>Is Archived</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Created)
                                        </td>

                                        <td>
                                            @item.Users.Count
                                        </td>
                                        <td>
                                            @item.Tickets.Count
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IsArchived)
                                        </td>

                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                        </table>
                    </div>
                </div>
            </div>
        </div>





        <table class="table text-white-50">
            <thead>
                <tr>
                    <th>
                        Project
                    </th>
                    <th>
                        Created
                    </th>


                    <th>
                        # Users
                    </th>
                    <th>
                        # Tickets
                    </th>

                    <th>
                        Is Archived
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>

                        <td>
                            @item.Users.Count
                        </td>
                        <td>
                            @item.Tickets.Count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsArchived)
                        </td>

                        @*<td>
                            @projectHelper.ListUsersOnProjectinRole(item.Id, "Project Manager").FirstOrDefault().FullName
                        </td>*@

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        }


        @if (User.IsInRole("Developer") || User.IsInRole("Submitter"))
        {
            <h2>My Projects</h2>
            <table class="table text-white-50">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Created)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsArchived)
                        </th>

                        <th>
                            @Html.DisplayName("Number of Tickets")
                        </th>
                        @*<th>
                            @Html.DisplayName("Project Manager")
                        </th>*@
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Created)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsArchived)
                            </td>
                            <td>
                                @item.Users.Count
                            </td>
                            @*<td>
                                    @projectHelper.ListUsersOnProjectinRole(item.Id, "Project Manager").FirstOrDefault().FullName
                            </td>*@

                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
